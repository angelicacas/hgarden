<div class="container" style="margin-top: 100px;">
  <div class="row">
    <div class="col">
      <p class="text-end">
        <span>Hola {{usuario}}</span>
        <a href="/admin/login/logout" class="btn btn-danger">Cerrar Sesion
          <i class="fas fa-sign-out-alt"></i></a>
      </p>
    </div>
  </div>
  <div class="row mt-5">
    <div class="col-8 text-center">
      <h2>Nuevos ingresos</h2>
    </div>
    <div class="col-4 text-center">
      <a href="/admin/novedades/agregar" class="btn btn-success"><i class="fas fa-plus"></i> Nuevo</a>
    </div>
  </div>

  <table class="table table-dark table-striped mb-5">

    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Titulo</th>
        <th scope="col">Descripci√≥n</th>
        <th scope="col">Imagen</th>
        <th scope="col">Modificar/Eliminar</th>
      </tr>
    </thead>

    <tbody class="table-group-divider">
      {{#each novedades}}
      <tr>
          <th scope="row">{{id}}</th>
          <td>{{titulo}}</td>
          <td>{{subtitulo}}</td>
          <td>{{{imagen}}}</td> 
          <td class="text-right">
            <a href="/admin/novedades/modificar/{{id}}" class="btn btn-secondary">
            <i class="fas fa-pencil-alt"></i></a>
            <a href="/admin/novedades/eliminar/{{id}}" class="btn btn-secondary">
            <i class="fas fa-trash"></i></a>
          </td>
      </tr>
      {{/each}}

    </tbody>
  </table>

</div>